<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranaymohapatra.inshortsoutlinks.MainActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ArticleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/progressbarlayoutmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ProgressBar
            android:id="@+id/progbarmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/progbarmain"
            android:layout_below="@+id/progbarmain"
            android:layout_marginTop="10dp"
            android:text="Fetching..." />
    </RelativeLayout>

</RelativeLayout>
